@page
@using Money.Web.Models;
@model Money.Web.Pages.Spendings.EditModel

@{
    ViewData["Title"] = "Edit Spending";
}

<h1>Edit Spending</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Spending.Id" />
            <div class="form-group">
                <label asp-for="Spending.Date" class="control-label"></label>
                <input asp-for="Spending.Date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="Spending.Date" asp-format="{0:yyyy-MM-dd}" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spending.Category" class="control-label"></label>
                <select class="form-select" asp-for="Spending.Category"
                        asp-items="@(new SelectList(Model.CategorySelector, nameof(CategorySelectorViewModel.Id), nameof(CategorySelectorViewModel.Name)))">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Spending.Description" class="control-label"></label>
                <input asp-for="Spending.Description" class="form-control" />
                <span asp-validation-for="Spending.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spending.Ammount" class="control-label"></label>
                <input asp-for="Spending.Ammount" class="form-control" />
                <span asp-validation-for="Spending.Ammount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-success" asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
