@page
@using Money.Web.Models;
@model Money.Web.Pages.Spendings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a Spending</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model.Spending.Date" class="control-label"></label>
                <input asp-for="Model.Spending.Date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="Model.Spending.Date" asp-format="{0:yyyy-MM-dd}" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Spending.Category" class="control-label"></label>
                <select class="form-select" asp-for="Model.Spending.Category"
                        asp-items="@(new SelectList(Model.Model.CategorySelector, nameof(CategorySelectorViewModel.Id), nameof(CategorySelectorViewModel.Name)))">
                    </select>
            </div>
            <div class="form-group">
                <label asp-for="Model.Spending.Description" class="control-label"></label>
                <input asp-for="Model.Spending.Description" class="form-control" />
                <span asp-validation-for="Model.Spending.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Spending.Ammount" class="control-label"></label>
                <input asp-for="Model.Spending.Ammount" class="form-control" />
                <span asp-validation-for="Model.Spending.Ammount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
